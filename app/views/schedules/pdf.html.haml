:css
    #calendar {
      margin-bottom: 20px;
    }
    #calendar table {
      border-collapse: collapse;
    width: 100%;
    }
    #calendar td {
      font-size: 11px;
      padding: 6px;
      border: 1px solid #999;
    }
    #calendar th {
      font-size: 10px;
      padding: 6px;
      border: 1px solid #999;
      color: #666;
      text-align: center;
      width: 14.2857142857143%;
    }
    #calendar td {
      background: #FFF;
      color: #777;
      height: 80px;
      vertical-align: top;
      font-size: 16px;
    }
    #calendar .notmonth {
      color: #CCC;
    }
    #calendar #month {
      margin: 0;
      padding-top: 10px;
      padding-bottom: 30px;
      text-align: center;
      font-size: 14px;
    }
    #calendar #month a {
      text-decoration: none;
      padding: 5px 10px 10px;
      color: #999;
      font-size: 14px;
    }
  
    #calendar .cal_date {
      border: 1px solid #d1d1d1;
      border-width: 0 1px 1px 0;
      display: inline-block;
      font-size: 14px;
      height: 25px;
      line-height: 25px;
      text-align: center;
      width: 25px;
    }
    #calendar ul {
      margin: 0;
      margin-top: 5px;
      padding: 0;
      list-style: none;
    }
    #calendar li {
      margin: 0;
      display: block;
      padding: 0;
      font-size: 10px;
      text-align: center;
    }
= render 'schedules/schedule.html.haml', schedules: @schedules
  